{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@app/*": ["./lib/app/*"],
      "@components/modal": ["./lib/components/modal"],
      "@components/shared": ["./lib/components/shared"],
      "@components/defaults": ["./lib/components/defaults"],
      "@features/affirmations": ["./lib/features/affirmations"],
      "@features/affirmations/notifications": ["./lib/features/affirmations/notifications"],
      "@features/lens": ["./lib/features/lens"],
      "@features/lens/lens-palette": ["./lib/features/lens/lens-palette"],
      "@features/lens/camera": ["./lib/features/lens/camera"],
      "@platform": ["./lib/platform"],
      "@platform/state-context-provider": ["./lib/platform/context/state-context-provider"],
      "@routes": ["./lib/routes"],
      "@screen-containers/*": ["./lib/screen-containers/*"],
      "@storage": ["./lib/storage"],
      "@styles": ["./lib/styles"],
      "@types": ["./lib/types"],
      "@utils": ["./lib/utils"],
      "@testing": ["./lib/testing"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": [".expo-defaults/old/**/*"]
}
