{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "paths": {
      "@shared-components": ["./src/lib/components/shared"],
      "@scheduled-notifications": [
        "./src/lib/components/scheduled-notifications"
      ],
      "@scheduler": ["./src/lib/components/scheduler"],
      "@global-types": ["./src/lib/types.ts"],
      "@notifications": ["./src/lib/notifications"],
      "@calendar-events": ["./src/lib/calendar-events"],
      "@platform": ["./src/lib/platform"],
      "@storage": ["./src/lib/storage"],
      "@utils": ["./src/lib/utils"],
      "@theme": ["./src/lib/theme"],
      "@data": ["./src/data"],
      "@modals": ["./src/lib/modals"]
    }
  },
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts"
  ]
}
