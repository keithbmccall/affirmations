{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@components": ["./lib/components"],
      "@components/notifications": ["./lib/components/notifications"],
      "@components/shared": ["./lib/components/shared"],
      "@features/notifications": ["./lib/features/notifications"],
      "@platform": ["./lib/platform"],
      "@routes": ["./lib/routes"],
      "@screen-containers/*": ["./lib/screen-containers/*"],
      "@storage": ["./lib/storage"],
      "@styles": ["./lib/styles"],
      "@utils": ["./lib/utils"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": [".expo-defaults/old/**/*"]
}
